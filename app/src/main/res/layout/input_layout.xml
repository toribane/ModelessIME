    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/key_shift"
            style="@style/FunctionKey"
            android:layout_weight="1"
            android:src="@drawable/ic_shift_none" />

        <ImageView
            android:id="@+id/key_space"
            style="@style/FunctionKey"
            android:layout_weight="3"
            android:src="@drawable/ic_space_bar" />

        <ImageView
            android:id="@+id/key_cursor_left"
            style="@style/FunctionKey"
            android:layout_weight="1"
            android:src="@drawable/ic_cursor_left" />

        <ImageView
            android:id="@+id/key_cursor_right"
            style="@style/FunctionKey"
            android:layout_weight="1"
            android:src="@drawable/ic_cursor_right" />

        <ImageView
            android:id="@+id/key_backspace"
            style="@style/FunctionKey"
            android:layout_weight="1"
            android:src="@drawable/ic_backspace" />

        <ImageView
            android:id="@+id/key_enter"
            style="@style/FunctionKey"
            android:layout_weight="1"
            android:src="@drawable/ic_enter_return" />

